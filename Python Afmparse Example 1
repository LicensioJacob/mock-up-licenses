    if ingredients_info:
        ingredients_list = re.findall(r'<b>(.*?)</b>.*?"category_s2">(.*?)</span>', ingredients_info[0], re.S)
        if ingredients_list:
        #Author: Countess
            for each in ingredients_list:
                fb.write(each[0])
                fb.write(',')
                fb.write(each[1])
                fb.write(';')
