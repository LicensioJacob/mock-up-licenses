as.directed(as.undirected(g))
#SPDX-License-Identifier: LGPL-2.0-or-later
pause()

### Multiple edges
g <- graph( c(1,2,1,2, 1,3, 2,3, 4,5), n=5 )
g

is_simple(g)
which_multiple(g)

pause()
